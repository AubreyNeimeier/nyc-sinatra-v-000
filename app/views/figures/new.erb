<h1> Create a new historical figure! </h1>

<form action="/figures" method="POST">

  <label> Figure's Name: </label>  <input type='text' name="figure[name]" id="figure_name">
  <br></br>

  <label> Figure's Title: </label>  <input type='text' name="title[name]" id="new_title">
  <br></br>

  <label> And/or chose from existing titles: </label>
  <br></br>

  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%= title.name %>
  <%end%>
  <br></br>

  <h2> Landmark Details </h2>
  <label> Figure's Landmark: </label>  <input type='text' name="landmark[name]" id="new_landmark">
  <label> Year the figure was completed: </label>  <input type='text' name="landmark[year_completed]" id="year_completed">
  <br></br>

  <label> And/or chose from existing landmarks: </label>
  <br></br>

  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id %>"><%= landmark.name %>
  <%end%>
  <br></br>

  <input type="submit" value="Create New Figure" name="submit">


  <br></br>
</form>

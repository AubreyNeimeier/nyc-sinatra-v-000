<h1> Create a new historical figure! </h1>

<form action="/figures" method="POST">

  <label> Figure's Name: </label>  <input type='text' name="Name">

  <br></br>

  <label> Figure's Title: </label>  <input type='text' name="Name">

  <br></br>

  <label> And/or chose from existing titles: </label>
  <br></br>

  <% Title.all.each do |title| %>
  <input type="checkbox" name="titles[]" value="<%= title.id %>" id="<%= title.name %>"><%= title.name %>
  <%end%>
  <br></br>

  <label> Figure's Landmark: </label>  <input type='text' name="landmark">

  <br></br>

  <label> And/or chose from existing landmarks: </label>
  <br></br>

  <% Landmark.all.each do |mark| %>
  <input type="checkbox" name="landmarks[]" value="<%= mark.id %>" id="<%= mark.name %>"><%= mark.name %>
  <%end%>
  <br></br>

  <input type="submit" value="Create" name="submit">


  <br></br>
</form>

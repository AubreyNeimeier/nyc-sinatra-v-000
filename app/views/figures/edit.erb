<h1> Edit a historical figure! </h1>

<form action="/figures" method="POST">

  <label> Figure's Name: </label>  <input type='text' name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br></br>

  <label> Figure's Title: </label>  <input type='text' name="title[name]" id="new_title" value="<%=@figure.titles%>">
  <br></br>

  <label> And/or chose from existing titles: </label>
  <br></br>

  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title) %> ><%= title.name %>
  <%end%>
  <br></br>

  <label> Figure's Landmark: </label>  <input type='text' name="landmark[name]" id="new_landmark" value="<%=@figure.landmarks%>">
  <br></br>

  <label> And/or chose from existing landmarks: </label>
  <br></br>

  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%=landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %> ><%= landmark.name %>
  <%end%>
  <br></br>

  <input type="submit" value="Edit Figure" name="submit">
</form>
